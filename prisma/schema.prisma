generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id    String @id
  email String @unique
  name  String?
  books Book[]
}

model Book {
  id      String   @id
  title   String
  authors Author[] @relation("BookAuthors")
  user    User?    @relation(fields: [userId], references: [id])
  userId  String?
}

model Author {
  id    Int    @id @default(autoincrement())
  name  String @unique
  books Book[] @relation("BookAuthors")
}
